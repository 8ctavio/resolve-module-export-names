{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./src/dist-dts",
		"declarationMap": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo"
	},
	"include": [
		"src/**/*.js",
		"src/types/**/*.ts"
	]
}